# ============ APPLICATION ============
APP_ENV=dev
APP_NAME=Example App
APP_DEBUG=0
APP_URL=https://crm.example.local
APP_TIMEZONE=Europe/Moscow
APP_LOCALE=ru_RU
APP_FALLBACK_LOCALE=en_US

# ============ SECURITY ============
APP_KEY=base64:your_32_character_key_here
APP_CIPHER=AES-256-CBC
HTTPS_FORCED=1
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=1

# ============ DATABASE ============
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=db0
DB_USERNAME=user
DB_PASSWORD=***
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=
DB_STRICT=true

# ============ CACHE & SESSIONS ============
CACHE_DRIVER=file
CACHE_PREFIX=yadro_php_
SESSION_DRIVER=file
SESSION_ENCRYPT=false

# ============ FILES ============
FILESYSTEM_DISK=local
FILESYSTEM_CLOUD=s3
UPLOAD_MAX_SIZE=2048

# ============ MAIL ============
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admin@yadro-php.ru
MAIL_FROM_NAME=Example App

# ============ LOGGING ============
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============ OPCACHE ============
OPCACHE_PRELOAD_ENABLED=1
OPCACHE_PRELOAD_MAX_AGE=3600

# ============ CUSTOM ============
ADMIN_EMAIL=admin@example.ru
TIMEZONE=Europe/Saratov
MAINTENANCE_MODE=0
HOST_NAME=example.local
HOST_INTEGRATED_LANDING=http://example.local
